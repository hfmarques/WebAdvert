@model Web.Models.Accounts.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="row">
    <dov class="col-md-4">
        <h4>Login using yout email address and password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="Signup">
                If you are not a member you can sign up here
            </a>
        </h5>
        <hr/>
        <form method="post" asp-controller="Accounts" asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe">
                    @Html.DisplayName("Remember Me")
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <h5>
            <a asp-controller="Accounts" asp-action="ResetPassword">
                Forgot Password
            </a>
        </h5>
    </dov>
</div>